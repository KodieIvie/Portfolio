section#news
  h3.divider - Top News Today -
    div
      a.pull-right.source(href="http://newsapi.org" target="_blank") Source - newsapi.org
  .container-fluid.container-news
    .row
      .col-sm-12.col-lg-8.offset-lg-2
        #myCarousel.carousel.slide.carousel-fade(data-ride='carousel')
          ol.carousel-indicator
            each i, ind in news.articles
              if i.urlToImage
                li(data-target="#myCarousel" data-slide-to= ind)
          .carousel-inner
            each i, ind in news.articles
              if i.urlToImage
                .carousel-item
                  img(src= i.urlToImage alt='')
                  .carousel-container
                    .carousel-content
                      h5
                        a(href= i.url target="_blank")= i.title
                  br  
          a.carousel-control-prev(href='#myCarousel' role='button' data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.sr-only Previous
          a.carousel-control-next(href='#myCarousel' role='button' data-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.sr-only Next